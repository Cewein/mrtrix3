#!/bin/bash
# Verify operation when all FMLS segmentation thresholds are disabled
#   (this produces a much larger number of fixels per voxel)
# Ensure that output matches that generated by a prior software version
fod2fixel -nthreads 1 fod.mif tmp-fod2fixel3 \
-fmls_no_thresholds \
-afd afd.mif \
-peak peak.mif \
-disp disp.mif \
-force

testing_diff_fixel -frac 10e-5 fod2fixel/out3 tmp-fod2fixel3
