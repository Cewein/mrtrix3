touch tmp-filein.txt && testing_python_cli -tracks_in tmp-filein.txt && false || true
touch tmp-tracksout.tck && testing_python_cli -tracks_out tmp-tracksout.tck 2>&1 && grep "use -force to override"
touch tmp-tracksout.tck && testing_python_cli -tracks_out tmp-tracksout.tck -force
